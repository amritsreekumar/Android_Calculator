<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naveen_nrj.basic_calculator.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSecond"
        android:layout_alignStart="@+id/etSecond"
        android:layout_below="@+id/etSecond"
        android:text="+"
        tools:layout_editor_absoluteY="320dp"
        tools:layout_editor_absoluteX="79dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:text="/"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="384dp" />

    <Button
        android:id="@+id/btnMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSecond"
        android:layout_alignRight="@+id/etSecond"
        android:layout_below="@+id/textView3"
        android:text="-"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDiv"
        android:layout_toEndOf="@+id/btnDiv"
        android:layout_toRightOf="@+id/btnDiv"
        android:text="*"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/txtRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etSecond"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etSecond"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="452dp" />

    <RelativeLayout
        android:layout_width="398dp"
        android:layout_height="501dp"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="5dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="My Calculator"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="48dp"
            android:text="First Number"
            android:textSize="24sp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etFirst"
            android:layout_alignStart="@+id/etFirst"
            android:layout_below="@+id/etFirst"
            android:layout_marginTop="18dp"
            android:text="Second Number"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/etSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginTop="54dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/etSecond"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="NRJ"
            android:textColor="@android:color/black" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
