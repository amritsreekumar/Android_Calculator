<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naveen_nrj.basic_calculator.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="528dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-9dp">

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtRes"
            android:layout_alignRight="@+id/txtRes"
            android:layout_below="@+id/txtRes"
            android:layout_marginTop="38dp"
            android:text="/"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="384dp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnDiv"
            android:layout_alignStart="@+id/btnDiv"
            android:layout_below="@+id/btnDiv"
            android:layout_marginTop="32dp"
            android:text="+"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="320dp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnAdd"
            android:layout_alignBottom="@+id/btnAdd"
            android:layout_alignLeft="@+id/btnMin"
            android:layout_alignStart="@+id/btnMin"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="*"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="318dp" />

        <Button
            android:id="@+id/btnMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnDiv"
            android:layout_alignBottom="@+id/btnDiv"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/btnDiv"
            android:layout_toRightOf="@+id/btnDiv"
            android:text="-"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="386dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="49dp"
            android:layout_alignLeft="@+id/txtRes"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtRes"
            android:layout_marginTop="25dp"
            android:text="Calculator"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="3dp" />

        <EditText
            android:id="@+id/etFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Number 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/etSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etFirst"
            android:layout_alignStart="@+id/etFirst"
            android:layout_below="@+id/etFirst"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Number 2"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etSecond"
            android:layout_alignStart="@+id/etSecond"
            android:layout_below="@+id/etSecond"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="32dp"
            android:text="Result"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="219dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@+id/etSecond"
            android:layout_toRightOf="@+id/etSecond"
            android:text="NRJ"
            android:textSize="8sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
